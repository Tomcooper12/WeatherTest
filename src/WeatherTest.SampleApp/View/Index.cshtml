<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/App.css")" type="text/css" />
    <title>Aggregate weather app</title>
</head>
<body ng-app="weatherApp">
    <div class="container" ng-controller="weatherController">
        <div class="page-header">
            <h1>{{Title}}</h1>
        </div>
        <form name="myForm">
            <div class="col-md-12">
                <h4>Location:</h4>
            </div>
            <div class="col-md-12">
                <input type="text" class="form-control" ng-model="locationInput" id="locationInput" placeholder="Location" ng-required="true" />
            </div>
            <div class="col-md-12">
                <h4>Unit:</h4>
            </div>
            <div class="col-md-6">
                <select class="form-control" ng-model="selectedSpeed" ng-required="true" ng-change="myForm.$valid && GetWeather()">
                    <option ng-repeat="s in speeds" value="{{s.value}}">{{s.label}}</option>
                </select>
            </div>
            <div class="col-md-6">
                <select class="form-control" ng-model="selectedTemp" ng-required="true" ng-change="myForm.$valid && GetWeather()">
                    <option ng-repeat="t in temps" ng-bind-html="t.label" value="{{t.value}}"></option>
                </select>
            </div>
        </form>
        <div ng-show="HasResults">
            <div class="col-md-12">
                <h4>Your Forecast</h4>
            </div>
            <div class="col-md-6">
                <p>Wind Speed: {{WindSpeed}}</p>
            </div>
            <div class="col-md-6">
                <p>Temperature: {{Temperature}}</p>
            </div>
        </div>
        <div class="col-md-12" ng-show="HasError">
            <div class="bs-callout bs-callout-danger">
                <h4>Whoops!</h4>
                <p>We seem to have encountered an error getting weather information.</p>
            </div>
        </div>
        <footer class="footer">
            <div class="container">
                <p class="text-muted">4Com Weather Test</p>
            </div>
        </footer>
    </div>
    <!-- Lazy load -->
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Js/controller.js")"></script>
</body>
</html>